#!/use/bin/env bash
# Script: 5-dont_stop_me_now
# Purpose: Stop the 4-to_infinity_and_beyond process

# Find the PID of the process
PID=$(pgrep -f "4-to_infinity_and_beyond")

if [ -z "$PID" ]; then
    echo "No running 4-to_infinity_and_beyond process found."
else
    # Kill the process
    kill "$PID"
    
    # Optional: Wait a moment and check if it stopped
    sleep 1
    if ps -p "$PID" > /dev/null; then
        echo "Process did not terminate, sending SIGKILL..."
        kill -9 "$PID"
    else
        echo "Process terminated successfully."
    fi
fi
